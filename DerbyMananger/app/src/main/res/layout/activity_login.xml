<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.example.pranav.derbymananger.login"
    android:background="#03A9F4">


    <EditText
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:inputType="textEmailAddress"
        android:hint="E-Mail Address"
        android:fontFamily="roboto condensed light"
        android:textStyle="italic"
        android:textSize="20dp"
        android:ems="10"
        android:id="@+id/email"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="180dp"
        android:background="#fffafff9"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:textColorHighlight="@color/material_blue_grey_800"
        android:backgroundTintMode="add"
        android:paddingStart="2dp" />


    <EditText
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:fontFamily="roboto condensed light"
        android:textStyle="italic"
        android:textSize="20dp"
        android:ems="10"
        android:id="@+id/password"
        android:layout_marginLeft="-279dp"
        android:layout_marginTop="230dp"
        android:background="#fffafff9"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:textColorHighlight="@color/material_blue_grey_800"
        android:backgroundTintMode="add"
        android:paddingStart="2dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-281dp"
        android:text="Sign In"
        android:textColor="#03A9F4"
        android:textColorHighlight="@color/background_material_dark"
        android:id="@+id/signin"
        android:layout_marginTop="160dp"
        android:layout_gravity="bottom"
        />
    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="If you aren't a Register Customer, Please visit the Website to get your ID"
        android:textColor="#fffafff9"
        android:layout_marginLeft="-282dp"
        android:layout_marginTop="460dp"/>
    <TextView
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_marginLeft="-267dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    DERBY MANAGER"
        android:layout_marginTop="30dp"
        android:id="@+id/textView2"
        android:textSize="50sp"/>

</LinearLayout>
